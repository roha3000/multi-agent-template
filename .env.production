# Production Environment Configuration
# Multi-Agent Framework with OpenTelemetry Integration
# Last Updated: 2025-12-14

# ============================================
# CORE SERVICES CONFIGURATION
# ============================================

# Node Environment
NODE_ENV=production
LOG_LEVEL=info

# ============================================
# OTLP TELEMETRY CONFIGURATION
# ============================================

# Enable Claude Code Telemetry
CLAUDE_CODE_ENABLE_TELEMETRY=1

# OTLP Endpoint Configuration
OTLP_ENDPOINT=http://localhost:4318
OTLP_RECEIVER_PORT=4318

# Metric Export Configuration
OTEL_METRICS_EXPORTER=otlp
OTEL_EXPORTER_OTLP_METRICS_ENDPOINT=http://localhost:4318/v1/metrics
OTEL_SERVICE_NAME=claude-code-sessions

# ============================================
# DASHBOARD CONFIGURATION
# ============================================

# Dashboard Server
DASHBOARD_PORT=3030
DASHBOARD_HOST=0.0.0.0

# Dashboard Features
DASHBOARD_ENABLE_REALTIME=true
DASHBOARD_SSE_HEARTBEAT_INTERVAL=30000

# ============================================
# SESSION MANAGEMENT
# ============================================

# Context Management Thresholds
CONTEXT_WARNING_THRESHOLD=85
CONTEXT_CRITICAL_THRESHOLD=95
CONTEXT_MAX_TOKENS=200000

# Checkpoint Configuration
CHECKPOINT_AUTO_SAVE=true
CHECKPOINT_ON_CONTEXT_THRESHOLD=true

# ============================================
# DATABASE CONFIGURATION
# ============================================

# SQLite Database
DATABASE_PATH=.claude/memory/production.db
DATABASE_BACKUP_ENABLED=true

# ============================================
# METRIC PROCESSOR CONFIGURATION
# ============================================

# Batching Configuration
METRIC_BATCH_SIZE=100
METRIC_BATCH_INTERVAL_MS=5000

# Aggregation Settings
METRIC_AGGREGATION_ENABLED=true
METRIC_DEDUP_ENABLED=true

# ============================================
# MONITORING & ALERTING
# ============================================

# Health Check Endpoints
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PORT=3031
HEALTH_CHECK_PATH=/health

# Prometheus Metrics Export
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090